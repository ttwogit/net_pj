<Page
    x:Class="net_pj.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:net_pj"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <TextBlock x:Name="WelcomeTextBlock" FontSize="24" Text="Chào mừng!" />
            
            <Button Content="Nạp Game" Click="TopUpButton_Click"/>
            <Button Content="Gọi Đồ Ăn" Click="FoodButton_Click"/>
            <Button Content="Thông tin người chơi" Click="UserInfoButton_Click"/>
            <Button Content="Đăng nhập/Đăng kí" Click="Logout_Click"/>
            <Button Content="Đăng xuất" Click="LogoutButton_Click"/> 
  
        </StackPanel>
    </Grid>
</Page>
