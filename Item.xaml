<UserControl
    x:Class="net_pj.Item"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:net_pj"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="200">

    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
        <StackPanel>
            <TextBlock x:Name="NameText" FontSize="20" FontWeight="Bold" Margin="5"/>
            <Image x:Name="ProductImage" Width="135" Height="180" Stretch="UniformToFill"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="PriceText"
                           Grid.Column="0"
                           Foreground="Green"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="5"/>

                <Button Content="Đặt hàng"
                        Grid.Column="1"
                        FontSize="12"
                        Margin="5"
                        Click="OrderButton_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
